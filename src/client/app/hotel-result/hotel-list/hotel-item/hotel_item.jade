div
    div.contenedor
        ul.imagen
            li.secundario
                slider(items="$ctrl.hotel.images")
            li.secundario
        ul.descripcion
            li.titulo {{$ctrl.hotel.name}}
            li.estrellas(ng-repeat="estrella in $ctrl.ponerEstrellas()")
                i(class="fa fa fa-star" aria-hidden="true")
            li.habitacion Solo habitacion
            ul
                li.amenities(ng-repeat="(key, value) in $ctrl.hotel.amenities" ng-class="$ctrl.getIcon(key)")

            li.secundario
        ul.precio
            li.descripcion_precio Precio por noche por habitacion
            li.contenedor_precio
                span.ars ARS
                div.precio_argentina
            li.impuestos impuestos y tasas no incluido
            li.more
                button Ver hotel
            li.pago Pagá en cuotas
            li.pago Pagá en destino
